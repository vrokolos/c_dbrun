{
    "name": "dbrun",
    "displayName": "dbrun",
    "description": "Run SQL commands. Only oracle support currently. Early beta",
    "version": "0.0.9",
    "publisher": "iosifak",
    "repository": { "url": "https://github.com/vrokolos/c_dbrun" },
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:dbrun.executeFile",
        "onCommand:dbrun.currentQuery",
        "onCommand:dbrun.describeObject",
        "onCommand:dbrun.currentQueryNewWindow",
        "onCommand:dbrun.run"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [{
                "command": "dbrun.executeFile",
                "title": "dbrun: Execute the current File"
            },
            {
                "command": "dbrun.currentQuery",
                "title": "dbrun: Execute the current Querry"
            },
            {
                "command": "dbrun.describeObject",
                "title": "dbrun: Describe current Object"
            },
            {
                "command": "dbrun.currentQueryNewWindow",
                "title": "dbrun: Execute the current Query in a new window"
            },
            {
                "command": "dbrun.run",
                "title": "Execute SQL.\n[kind] 0: Whole file 1: Current Querry 2: Describe Object\n[newwindow] false: Use Output Panel true: Use new Editor"
            }
        ],
        "configuration": {
            "title": "Connection Settings",
            "properties": {
                "dbrun.connection": {
                    "type": "string",
                    "default": false,
                    "description": "Connection to be used. Format: user/password@host:port/database"
                },
                "dbrun.rowLimit": {
                    "type": "integer",
                    "default": 10,
                    "description": "Number of rows to fetch for each SQL query"
                }
            }
        },
        "keybindings": [{
                "command": "dbrun.run",
                "args": {
                    "kind": 1,
                    "newwindow": true
                },
                "key": "ctrl+shift+enter",
                "mac": "cmd+shift+enter",
                "when": "editorTextFocus && editorLangId == 'sql'"
            },
            {
                "key": "f9",
                "command": "dbrun.run",
                "when": "editorTextFocus && editorLangId == 'sql'"
            },
            {
                "key": "f4",
                "command": "dbrun.run",
                "args": {
                    "kind": 2
                },
                "when": "editorTextFocus && editorLangId == 'sql'"
            },
            {
                "key": "ctrl+enter",
                "mac": "cmd+enter",
                "command": "dbrun.run",
                "args": {
                    "kind": 1
                },
                "when": "editorTextFocus && editorLangId == 'sql'"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.46.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.26.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "@types/cli-table": "^0.3.0",
        "@types/oracledb": "^4.2.2",
        "cli-table3": "^0.6.0",
        "csvtojson": "^2.0.10",
        "export-to-csv": "^0.2.1",
        "oracledb": "^5.0.0"
    }
}