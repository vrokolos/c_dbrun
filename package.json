{
  "name": "dbrun",
  "displayName": "dbrun",
  "description": "Run SQL commands. Only oracle support currently. Early beta",
  "version": "0.3.5",
  "publisher": "iosifak",
  "repository": {
    "url": "https://github.com/vrokolos/c_dbrun"
  },
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:dbrun.executeFile",
    "onCommand:dbrun.currentQuery",
    "onCommand:dbrun.describeObject",
    "onCommand:dbrun.currentQueryNewWindow",
    "onCommand:dbrun.run",
    "onLanguage:sql"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "sql",
        "path": "./snippets/sql.json"
      }
    ],
    "commands": [
      {
        "command": "dbrun.executeFile",
        "title": "dbrun: Execute the current File"
      },
      {
        "command": "dbrun.currentQuery",
        "title": "dbrun: Execute the current Querry"
      },
      {
        "command": "dbrun.reconnect",
        "title": "dbrun: Reconnect"
      },
      {
        "command": "dbrun.describeObject",
        "title": "dbrun: Describe current Object"
      },
      {
        "command": "dbrun.currentQueryNewWindow",
        "title": "dbrun: Execute the current Query in a new window"
      },
      {
        "command": "dbrun.currentQueryNewWindowInsert",
        "title": "dbrun: Create Insert statements for the current Query"
      },
      {
        "command": "dbrun.currentQueryNewWindowCSV",
        "title": "dbrun: Create CSV file for the current Query"
      },
      {
        "command": "dbrun.run",
        "title": "Execute SQL.\n[kind] 0: Whole file 1: Current Querry 2: Describe Object\n[newwindow] false: Use Output Panel true: Use new Editor"
      }
    ],
    "configuration": {
      "title": "Connection Settings",
      "properties": {
        "dbrun.connection": {
          "type": "string",
          "default": false,
          "description": "Connection to be used. Oracle Format: user/password@host:port/database, Postgres Format: postgres://user:password@host:port/database"
        },
        "dbrun.rowLimit": {
          "type": "integer",
          "default": 10,
          "description": "Number of rows to fetch for each SQL query"
        }
      }
    },
    "keybindings": [
      {
        "command": "dbrun.run",
        "args": {
          "kind": 1,
          "newwindow": true
        },
        "key": "ctrl+shift+enter",
        "mac": "cmd+shift+enter",
        "when": "editorTextFocus && editorLangId == 'sql'"
      },
      {
        "key": "f9",
        "command": "dbrun.run",
        "when": "editorTextFocus && editorLangId == 'sql'"
      },
      {
        "key": "f4",
        "command": "dbrun.run",
        "args": {
          "kind": 2
        },
        "when": "editorTextFocus && editorLangId == 'sql'"
      },
      {
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "command": "dbrun.run",
        "args": {
          "kind": 1
        },
        "when": "editorTextFocus && editorLangId == 'sql'"
      }
    ],
    "languages": [
      {
        "id": "dbrun",
        "extensions": [
          ".log"
        ],
        "aliases": [
          "dbrun"
        ],
        "mimetypes": [
          "log",
          "text/log",
          "text/x-log",
          "text/x-code-output",
          "x-code-output"
        ]
      }
    ],
    "grammars": [
      {
        "language": "dbrun",
        "scopeName": "dbrun.log",
        "path": "./dbrun.tmLanguage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "publish": "vsce publish",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/cli-table": "^0.3.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/oracledb": "^4.2.2",
    "@types/pg": "^7.14.11",
    "@types/vscode": "^1.46.0",
    "@types/yesql": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "cli-table3": "^0.6.0",
    "export-to-csv": "^0.2.1",
    "oracledb": "^5.0.0",
    "pg": "^8.5.1",
    "pg-cursor": "^2.5.2",
    "yesql": "^5.0.0"
  }
}
